@import url('https://fonts.googleapis.com/css2?family=DotGothic16&display=swap');
body
 { background-color: black;
    padding: 0;
    margin: 0;

  }
section{
  display: grid;
  place-items: center;
  align-content: center;
  min-height: 100vh;
  margin: 0;
}
.hidden{
  opacity: 0;
  filter: blur(5px);
  transition: all 1.5s;
}
.show{
  opacity: 1;
  filter: blur(0);
  transition: all 1.5s;
}
p{
  text-align: left;
  font-family: 'DotGothic16', sans-serif;
  color: azure;
}
h2{
  text-align: left;
  font-family: 'DotGothic16', sans-serif;
  color: azure;
}
